{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2017",                         
    "module": "commonjs",                    
    "strict": true,                         
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "index.d.ts",
  ],
  "exclude": [
    "dist",
    "node_modules*",
    "test",
    "**/*.spec.ts",
    "web"
  ]
}
