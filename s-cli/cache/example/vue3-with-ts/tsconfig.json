{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",                         
    "module": "commonjs",
    "allowJs": true,                    
    "strict": true,                         
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "types/**/*",
    "src/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.js",
    "node_modules"
  ]
}
